extends ../layout
block title
  |  Sites
block content
  div.col-md-12
    h3 Sites
    if(messages.success)
      p.bg-success
        = messages.success
    table.table.table-bordered
      thead
        tr
          th Name
          th City
          th Studies
          th Size
          th
      tbody
        each item in results ? results : []
          tr
            td
              = item.name
            td
              = item.city
            td
              = item.studies
            td
              = item.storagesize
            td
              a.btn.btn-default(href='sites/update/' + item.id) Edit
      tfoot
    if(messages.error)
      p.bg-danger
        = messages.error
  div.col-md-12
    a.btn.btn-default(href='sites/new') New
