extends ../layout
block title
  |  Swith Site
block content
  h3 Swith Site
  if(messages.error)
    p.bg-danger
      = messages.error
  form.form-horizontal(name="switchsite", method="post")
    div.form-group
      label.col-sm-3.control-label Site
      div.col-sm-9
        select.form-control(name="site_id", value=site_id)
          each item in sites ? sites : []
            option(value=item.site_id selected=site_id == item.site_id)
              = item.name
    div.form-group
      div.col-sm-9.col-sm-offset-3
        input.btn.btn-primary(name="submit", type="submit", value="switch")
        | &nbsp;
        a.btn.btn-default(href='/') Cancel
