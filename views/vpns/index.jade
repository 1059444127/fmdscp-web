extends ../layout
block title
  |  VPNs
block content
  div.col-md-12
    h3 VPNs
    if(messages.success)
      p.bg-success
        = messages.success
    table.table.table-bordered
      thead
        tr
          th Name
          th Site
          th Status
          th Usage
          th
      tbody
        each item in results ? results : []
          tr
            td
              = item.name
            td
              = item.site
            td
              = item.status
            td
              = item.usage
            td
              a.btn.btn-default(href='sites/update/' + item.id) Edit
      tfoot
    if(messages.error)
      p.bg-danger
        = messages.error
  div.col-md-12
    a.btn.btn-default(href='vpns/new') New
